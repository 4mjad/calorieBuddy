        <main>    

      		<h1>List of Food Items</h1>
            	<h3>You can see names and details of all food items here:</h3>

            	<ul>

	<br>                                                                                                                                                                                                            

        <div class="ptable">

	<table class="table">                                                                                                                                                                                                   
            <tr class="col">
                <th>Name</th>
                <th>Food Value</th>
                <th>Unit</th>
                <th>Calories</th>
                <th>Carbs</th>
                <th>Fat</th>
                <th>Protein</th>
                <th>Salt</th>
                <th>Sugar</th>
            </tr>
                                                                                                                                                                                                            
                <% availablefoods.forEach(function(food){ %>
                                                                                                                                                                                                           
            <tr class ="wpos">
                        <td><%= food.name %></td>
                        <td><%= food.value %></td>
                        <td><%= food.unit %></td>
                        <td><%= food.calories %></td>
                        <td><%= food.carbs %></td>
                        <td><%= food.fat %></td>
                        <td><%= food.protein %></td>
                        <td><%= food.salt %></td>
                        <td><%= food.sugar %></td>
            </tr>

        </div>

        </ul>

                 <% }) %>

   </body>

