	<main>
                                                                                                                                                                                                           
        <h1>Update your Food</h1>
                                                                                                                                                                                                            
        <p>Here is what we found</p>

	<ul>

                        <% availablefoods.forEach(function(food){ %>

                        <li>Food Name: <%= food.name %>, Food Value: <%= food.value %>, Food Unit: <%= food.unit %>, Calories: <%= food.calories %>, Carbs: <%= food.carbs %>, Fat: <%= food.fat %>,

                        Protein: <%= food.protein %>, Salt: <%= food.salt %>, Sugar: <%= food.sugar %></li>

                        <% }) %>

                </ul>

	<h4> Fill out the form below for the values you want updated. If you do not want to make any changes then type in the same value. </h4>

	<div class="form">
                                                                                                                                                                                                            
                 <form method="POST" action="/updatedfood">

                <label for="name">Food name <small> (Cannot be empty) </small> </label>
                <input id="name" type="text" name="name"/><br>
                                                                                                                                                                                                            
                <label for="value">Food value <small> (Has to be number) </small> </label>
                <input id="value" type="text" name="value"/><br>
                                                                                                                                                                                                            
                <label for="unit">Unit of the value <small> (Cannot be empty) </small> </label>
                <input id="unit" type="text" name="unit"/><br>
                                                                                                                                                                                                            
                <label for="calories">Calories <small> (Has to be number) </small> </label>
                <input id="calories" type="text" name="calories"/><br>
                                                                                                                                                                                                            
                <label for="carbs">Carbs <small> (Has to be number) </small> </label>
                <input id="carbs" type="text" name="carbs"/><br>
                                                                                                                                                                                                            
                <label for="fat">Fat <small> (Has to be number) </small> </label>
                <input id="fat" type="text" name="fat"/><br>
                                                                                                                                                                                                            
                <label for="protein">Protein <small> (Has to be number) </small> </label>
                <input id="protein" type="text" name="protein"/><br>
                                                                                                                                                                                                            
                <label for="salt">Salt <small> (Has to be number) </small> </label>
                <input id="salt" type="text" name="salt"/><br>
                                                                                                                                                                                                            
                <label for="sugar">Sugar <small> (Has to be number) </small> </label>
                <input id="sugar" type="text" name="sugar"/>                                                                                                                                                            
                <input type="submit" value="Submit">
                                                                                                                                                                                                           
                </form>

        </div>	
	
	<div class ="delete">                
		<form method="POST" action="/deletedfood">
   		<h4>Please write the name of the food item you want deleted</h4>
   	 	<label for= "name"><b>Name:</b></label>
    		<input id="name" type="text" name="name" />
    		<br></br>
    		<input type="submit" name="delete"/>
		</form>      
	</div>                                                                                                                                                                                                                                                                                                                                                                                         
